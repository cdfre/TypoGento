<?xml version="1.0"?>
<config>
	<modules>
		<Wee_Typogento>
			<version>0.3.5</version>
		</Wee_Typogento>
	</modules>
	<global>
		<helpers>
			<typogento>
				<class>Wee_Typogento_Helper</class>
			</typogento>
		</helpers>
		<events>
			<customer_save_after>
				<observers>
					<typogento>
						<type>singleton</type>
						<class>Wee_Typogento_Model_Observer</class>
						<method>customerSaveAfterEvent</method>
					</typogento>
				</observers>
			</customer_save_after>
			<customer_login>
				<observers>
					<typogento_login>
						<type>model</type>
						<class>Wee_Typogento_Model_Observer</class>
						<method>loginEvent</method>
					</typogento_login>
				</observers>
			</customer_login>
			<customer_logout>
				<observers>
					<typogento_logout>
						<type>model</type>
						<class>Wee_Typogento_Model_Observer</class>
						<method>logoutEvent</method>
					</typogento_logout>
				</observers>
			</customer_logout>
			<controller_action_predispatch>
				<observers>
					<typogento_access_check>
						<type>singleton</type>
						<class>Wee_Typogento_Model_Observer</class>
						<method>controllerActionPredispatch</method>
					</typogento_access_check>
				</observers>
			</controller_action_predispatch>
			<customer_group_save_before>
				<observers>
					<typogento_customer_group_save_before>
						<type>singleton</type>
						<class>Wee_Typogento_Model_Observer</class>
						<method>customerGroupSaveBefore</method>
					</typogento_customer_group_save_before>
				</observers>
			</customer_group_save_before>
		</events>
		<models>
			<core>
				<rewrite>
					<url>Wee_Typogento_Model_Url</url>
					<store>Wee_Typogento_Model_Store</store>
					<layout>Wee_Typogento_Model_Layout</layout>
				</rewrite>
			</core>
			<typogento>
				<class>Wee_Typogento_Model</class>
				<resourceModel>typogento_mysql4</resourceModel>
			</typogento>
			<typogento_mysql4>
				<class>Wee_Typogento_Model_Mysql4</class>
				<entities>
					<typo3_frontend_user>
						<table>fe_users</table>
					</typo3_frontend_user>
					<typo3_frontend_group>
						<table>fe_groups</table>
					</typo3_frontend_group>
				</entities>
			</typogento_mysql4>
		</models>
		<resources>
			<typogento_setup>
				<setup>
					<module>typogento</module>
					<class>Mage_Eav_Model_Entity_Setup</class>
				</setup>
				<connection>
					<use>default_setup</use>
				</connection>
			</typogento_setup>
			<typogento_read>
				<connection>
					<active>1</active>
					<model>mysql4</model>
					<type>pdo_mysql</type>
				</connection>
			</typogento_read>
			<typogento_write>
				<connection>
					<use>typogento_read</use>
				</connection>
			</typogento_write>
		</resources>
		<blocks>
			<adminhtml>
				<rewrite>
					<customer_group_edit_form>Wee_Typogento_Block_Customer_Edit_Form</customer_group_edit_form>
				</rewrite>
			</adminhtml>
		</blocks>
	</global>
	<frontend>
		<routers>
			<template>
				<use>standard</use>
				<args>
					<module>Wee_Typogento</module>
					<frontName>typogento</frontName>
				</args>
			</template>
		</routers>
		<layout>
			<updates>
				<template>
					<file>wee_typogento.xml</file>
				</template>
			</updates>
		</layout>
	</frontend>
	<adminhtml>
		<translate>
		<modules>
			<typogento>
				<files>
					<default>Wee_Typogento.csv</default>
				</files>
			</typogento>
		</modules>
	</translate>
	</adminhtml>
	<default>
		<web>
			<url>
				<redirect_to_base>0</redirect_to_base>
			</url>
		</web>
		<typogento>
			<config>
				<direct_mage_access>1</direct_mage_access>
				<ua_regex></ua_regex>
				<redirect_url>/</redirect_url>
			</config>
		</typogento>
	</default>
</config>