<?xml version="1.0"?>
<config>
	<api>
		<resources>
			<typogento_catalog_product translate="title"
				module="typogento">
				<model>Wee_Typogento_Model_Catalog_Product_Api</model>
				<title>TypoGento API</title>
				<acl>typogento/urlkeys</acl>
				<methods>
					<urlkeys translate="title" module="typogento">
						<title>List of Product URLs</title>
						<method>urlkeys</method>
					</urlkeys>
				</methods>
			</typogento_catalog_product>
			<typogento_stores translate="title" module="typogento">
				<model>Wee_Typogento_Model_Store_Api</model>
				<title>TypoGento API</title>
				<acl>typogento/stores</acl>
				<methods>
					<list translate="title" module="typogento">
						<title>List of stores</title>
						<method>items</method>
					</list>
				</methods>
			</typogento_stores>
			<typogento_catalog_category translate="title"
				module="typogento">
				<model>Wee_Typogento_Model_Catalog_Category_Api</model>
				<title>TypoGento API</title>
				<acl>typogento/urlkeys</acl>
				<methods>
					<urlkeys translate="title" module="typogento">
						<title>List of Category URLs</title>
						<method>urlkeys</method>
					</urlkeys>
				</methods>
			</typogento_catalog_category>
			<typogento_admin_roles translate="title"
				module="typogento">
				<model>Wee_Typogento_Model_Admin_Roles_Api</model>
				<title>TypoGento API</title>
				<acl>typogento/roles</acl>
				<methods>
					<list translate="title" module="typogento">
						<title>List of Admin Roles</title>
						<method>items</method>
					</list>
				</methods>
			</typogento_admin_roles>
			<typogento_modules translate="title" module="typogento">
				<model>Wee_Typogento_Model_Modules_Api</model>
				<title>TypoGento API</title>
				<acl>typogento/modules</acl>
				<methods>
					<list translate="title" module="typogento">
						<title>List of Modules</title>
						<method>items</method>
					</list>
					<controllers translate="title" module="typogento">
						<title>List of Controllers</title>
						<method>controllers</method>
					</controllers>
					<actions translate="title" module="typogento">
						<title>List of Actions</title>
						<method>actions</method>
					</actions>
				</methods>
			</typogento_modules>
			<typogento_replication translate="title"
				module="typogento">
				<model>Wee_Typogento_Model_Replication_Api</model>
				<title>TypoGento API</title>
				<acl>typogento/replication</acl>
				<methods>
					<sources translate="title" module="typogento">
						<title>List of replication sources</title>
						<method>sources</method>
					</sources>
					<targets translate="title" module="typogento">
						<title>List of replication targets</title>
						<method>targets</method>
					</targets>
				</methods>
			</typogento_replication>
		</resources>
		<acl>
			<resources>
				<all>
					<typogento translate="title" module="typogento">
						<title>TypoGento</title>
						<sort_order>5</sort_order>
						<storeviews translate="title" module="typogento">
							<title>Stores</title>
						</storeviews>
						<urlkeys translate="title" module="typogento">
							<title>Category and Product URLs</title>
						</urlkeys>
						<roles translate="title" module="typogento">
							<title>Admin Roles</title>
						</roles>
						<modules translate="title" module="typogento">
							<title>Modules</title>
						</modules>
						<replication translate="title" module="typogento">
							<title>Replication</title>
						</replication>
					</typogento>
				</all>
			</resources>
		</acl>
	</api>
</config>