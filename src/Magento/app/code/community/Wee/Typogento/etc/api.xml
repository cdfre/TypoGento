<?xml version="1.0"?>
<config>
    <api>
        <resources>
            <typo3connect_storeviews translate="title" module="Flagbit_Typo3connect">
                <model>Flagbit_Typo3connect/storeviews_api</model>
                <title>Typo3connect Api</title>
                <acl>typo3connect/storeviews</acl>
                <methods>
                    <list translate="title" module="Flagbit_Typo3connect">
                        <title>List of storeviews</title>
                        <method>items</method>
                    </list>
                </methods>
            </typo3connect_storeviews>
            <typo3connect_catalog_category translate="title" module="Flagbit_Typo3connect">
                <model>Flagbit_Typo3connect/catalog_category_api</model>
                <title>Typo3connect Api</title>
                <acl>typo3connect/urlkeys</acl>
                <methods>
                    <urlkeys translate="title" module="Flagbit_Typo3connect">
                        <title>List of Category URLs</title>
                        <method>urlkeys</method>
                    </urlkeys>
                </methods>
            </typo3connect_catalog_category>
            <typo3connect_admin_roles translate="title" module="Flagbit_Typo3connect">
                <model>Flagbit_Typo3connect/admin_roles_api</model>
                <title>Typo3connect Api</title>
                <acl>typo3connect/roles</acl>
                <methods>
                    <list translate="title" module="Flagbit_Typo3connect">
                        <title>List of Admin Roles</title>
                        <method>items</method>
                    </list>
                </methods>
            </typo3connect_admin_roles>              
            <typo3connect_modules translate="title" module="Flagbit_Typo3connect">
                <model>Flagbit_Typo3connect/modules_api</model>
                <title>Typo3connect Api</title>
                <acl>typo3connect/modules</acl>
                <methods>
                    <list translate="title" module="Flagbit_Typo3connect">
                        <title>List of Modules</title>
                        <method>items</method>
                    </list>
                    <controllers translate="title" module="Flagbit_Typo3connect">
                        <title>List of Controllers</title>
                        <method>controllers</method>
                    </controllers>                    
                    <actions translate="title" module="Flagbit_Typo3connect">
                        <title>List of Actions</title>
                        <method>actions</method>
                    </actions>                    
                </methods>
            </typo3connect_modules>                                  
        </resources>
        <acl>
            <resources>
                <all>
                    <typo3connect translate="title" module="Flagbit_Typo3connect">
                        <title>Typogento</title>
                        <sort_order>5</sort_order>
                        <storeviews translate="title" module="Flagbit_Typo3connect">
                            <title>Storeviews</title>
                        </storeviews>
                        <urlkeys translate="title" module="Flagbit_Typo3connect">
                            <title>Category URLs</title>
                        </urlkeys>                        
                        <roles translate="title" module="Flagbit_Typo3connect">
                            <title>Admin Roles</title>
                        </roles>  
                        <modules translate="title" module="Flagbit_Typo3connect">
                            <title>Modules</title>
                        </modules>                                              
                    </typo3connect>
                </all>
            </resources>
        </acl>
    </api>
</config>